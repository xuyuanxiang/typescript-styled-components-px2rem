{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "transform": "..",
        "type": "config",
        "rootValue": 100,
        "unitPrecision": 5,
        "minPixelValue": 2,
        "multiplier": 2,
        "tags": ["styled", "css", "createGlobalStyle", "keyframes"]
      }
    ]
  },
  "exclude": ["dist"],
  "include": ["src"]
}
